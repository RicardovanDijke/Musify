<UserControl x:Class="Musify_Desktop_App.Panels.SongListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Musify_Desktop_App.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Songs}" Background="MediumPurple" Grid.Row="0" Grid.Column="0">

            <DataGrid.Columns>
                <DataGridTextColumn  Header="Title" Binding="{Binding Title}"></DataGridTextColumn>
                <DataGridTextColumn  Header="Title" Binding="{Binding Title}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
